<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="160.0" prefWidth="752.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="biblioteka.gui.books.BookEntry2Controller">
   <children>
      <ImageView fx:id="book_cover" fitHeight="162.0" fitWidth="117.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="title_label" prefHeight="30.0" prefWidth="172.0" text="Naslov">
         <font>
            <Font name="Century Gothic Bold" size="15.0" />
         </font>
      </Label>
      <Label fx:id="author_label" prefHeight="30.0" prefWidth="167.0" text="Autor">
         <font>
            <Font name="Century Gothic Bold" size="15.0" />
         </font>
      </Label>
      <Label fx:id="release_date_label" layoutX="47.0" layoutY="10.0" prefHeight="30.0" prefWidth="149.0" text="Datum objavljivanja">
         <font>
            <Font name="Century Gothic Bold" size="15.0" />
         </font>
      </Label>
      <Label fx:id="language_label" layoutX="169.0" layoutY="10.0" prefHeight="30.0" prefWidth="99.0" text="Jezik">
         <font>
            <Font name="Century Gothic Bold" size="15.0" />
         </font>
      </Label>
      <Button fx:id="publish_btn" mnemonicParsing="false" style="-fx-background-color: transparent;" onAction="#handlePublishButton">
         <graphic>
            <FontAwesomeIconView fill="#05ff05" glyphName="CHECK" size="25" />
         </graphic>
      </Button>
   </children>
   <padding>
      <Insets left="5.0" />
   </padding>
</HBox>
